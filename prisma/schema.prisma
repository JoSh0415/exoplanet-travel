datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Exoplanet {
  id              String   @id @default(cuid())
  name            String   @unique
  distance        Float
  temperature     Float?
  gravity         Float?
  vibe            String?
  discoveryYear   Int?
  bookings        Booking[]
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String
  bookings      Booking[]
}

model Booking {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  planetId      String
  planet        Exoplanet @relation(fields: [planetId], references: [id])
  travelClass   String
  status        String    @default("CONFIRMED")
  bookingDate   DateTime  @default(now())

  @@index([userId])
  @@index([planetId])
}